@model IEnumerable<supply.Models.Invoice>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Invoice List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light py-4">

    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Invoice List</h2>
            <a asp-action="Create" class="btn btn-success">+ Create New Invoice</a>
        </div>

        <table class="table table-striped table-bordered shadow-sm bg-white">
            <thead class="table-dark">
                <tr>
                    <th>Invoice Number</th>
                    <th>Invoice Date</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.InvoiceNumber</td>
                        <td>@item.InvoiceDate.ToString("yyyy-MM-dd")</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.InvoiceId" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.InvoiceId" class="btn btn-sm btn-info text-white">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.InvoiceId" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a class="nav-link text-break link-info text-decoration-underline mt-2" asp-area="" asp-controller="DashBoard" asp-action="Index">Return to dashboard</a>
    </div>

</body>
</html>
