@model IEnumerable<supply.Models.Sale>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Sales List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .table-wrapper {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 0 10px rgba(0,0,0,0.05);
            padding: 30px;
        }

        h2 {
            font-weight: 600;
            color: #333;
        }

        .btn {
            border-radius: 20px;
        }

        .table-hover tbody tr:hover {
            background-color: #f1f1f1;
        }

        .table thead th {
            background-color: #e9ecef;
        }

        .action-buttons a {
            margin-right: 6px;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <div class="table-wrapper">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-receipt"></i> Sales Records</h2>
                <a asp-action="Create" class="btn btn-success shadow-sm px-4">+ Create New Sale</a>
            </div>

            <table class="table table-bordered table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Date)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Amount)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Customer)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Employee)</th>
                        <th>@Html.DisplayNameFor(model => model.First().InvoiceItem.InvoiceNumber)</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Date.ToString("yyyy-MM-dd")</td>
                            <td>@item.Amount.ToString("")</td>
                            <td>@item.Customer?.Name</td>
                            <td>@item.Employee?.Name</td>
                            <td>@item.InvoiceItem?.InvoiceNumber</td>
                            <td class="text-center action-buttons">
                                <a asp-action="Edit" asp-route-id="@item.SaleId" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.SaleId" class="btn btn-sm btn-outline-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.SaleId" class="btn btn-sm btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.js"></script>
</body>
</html>
