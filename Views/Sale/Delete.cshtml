@model supply.Models.Sale

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete Sale</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <div class="container mt-5" style="max-width: 600px;">
        <h3 class="text-danger mb-4">Are you sure you want to delete this sale?</h3>
        <div class="card shadow-sm p-4 mb-4">
            <h4 class="mb-3">Sale Details</h4>
            <dl class="row">
                <dt class="col-sm-4">Date</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Date)</dd>

                <dt class="col-sm-4">Amount</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Amount)</dd>

                <dt class="col-sm-4">Customer</dt>
                <dd class="col-sm-8">@(Model.Customer?.Name ?? "N/A")</dd>

                <dt class="col-sm-4">Employee</dt>
                <dd class="col-sm-8">@(Model.Employee?.Name ?? "N/A")</dd>

                <dt class="col-sm-4">Invoice </dt>
                <dd class="col-sm-8">@(Model.Invoice.InvoiceNumber)</dd>
            </dl>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="SaleId" />
            <div class="d-flex gap-3">
                <button type="submit" class="btn btn-danger px-4">Delete</button>
                <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
