@model supply.Models.Sale

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sale Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <div class="container mt-5" style="max-width: 650px;">
        <h3 class="mb-4 text-primary">Sale Details</h3>
        <div class="card shadow p-4">
            <dl class="row mb-0">
                <dt class="col-sm-4 text-secondary">Date</dt>
                <dd class="col-sm-8">@Model.Date.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-4 text-secondary">Amount</dt>
                <dd class="col-sm-8">@Model.Amount</dd>

                <dt class="col-sm-4 text-secondary">Customer</dt>
                <dd class="col-sm-8">@((Model.Customer != null) ? Model.Customer.Name : "N/A")</dd>

                <dt class="col-sm-4 text-secondary">Employee</dt>
                <dd class="col-sm-8">@(@Model.Employee?.Name ?? "N/A")</dd>

                <dt class="col-sm-4 text-secondary">Invoice</dt>
                <dd class="col-sm-8">@(@Model.Invoice.InvoiceNumber )</dd>
            </dl>
        </div>

        <div class="d-flex gap-3 mt-4">
            <a asp-action="Edit" asp-route-id="@Model.SaleId" class="btn btn-primary px-4">Edit</a>
            <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

