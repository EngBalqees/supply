@model supply.Models.Employee

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employee Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
            padding: 40px 0;
        }

        .details-container {
            max-width: 600px;
            margin: auto;
            background: white;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
        }

        h4 {
            margin-bottom: 20px;
            font-weight: 600;
            color: #343a40;
            text-align: center;
        }

        dl.row {
            margin-bottom: 30px;
        }

        dt {
            font-weight: 600;
            color: #495057;
        }

        dd {
            color: #212529;
        }

        .actions {
            text-align: center;
        }

            .actions a {
                margin: 0 10px;
                text-decoration: none;
            }

                .actions a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="details-container">
        <h4>Employee Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Address)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>
        </dl>

        <div class="actions">
            <a asp-action="Edit" asp-route-id="@Model?.EmployeeId" class="btn btn-outline-primary">Edit</a>
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </div>
</body>
</html>
