@model IEnumerable<supply.Models.Employee>

@{
    Layout = null; // Or your shared layout
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employees List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
            padding: 30px;
        }

        h2 {
            margin-bottom: 20px;
            font-weight: 600;
        }

        .table thead th {
            background-color: #0d6efd;
            color: white;
        }

        .btn-create {
            margin-bottom: 15px;
        }

        .action-links a {
            margin-right: 10px;
            text-decoration: none;
        }

            .action-links a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Employees List </h2>

        <p>
            <a asp-action="Create" class="btn btn-success btn-create"> Add New Employee </a>
        </p>

        <table class="table table-striped table-bordered align-middle">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Name)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Address)</th>
                    <th style="width: 220px;">Process</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">No Employess </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Address)</td>
                            <td class="action-links">
                                <a asp-action="Edit" asp-route-id="@item.EmployeeId" class="btn btn-sm btn-primary">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.EmployeeId" class="btn btn-sm btn-info text-white">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.EmployeeId" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <a class="nav-link text-break link-info text-decoration-underline mt-2" asp-area="" asp-controller="DashBoard" asp-action="Index">Return to dashboard</a>

    </div>
</body>
</html>
