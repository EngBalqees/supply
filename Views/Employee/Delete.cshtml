@model supply.Models.Employee

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete Employee</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
            padding: 40px 0;
        }

        .delete-container {
            max-width: 500px;
            margin: auto;
            background: white;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
        }

        h3 {
            color: #dc3545;
            font-weight: 600;
            text-align: center;
            margin-bottom: 30px;
        }

        dl.row {
            margin-bottom: 30px;
        }

        dt {
            font-weight: 600;
        }

        .btn-danger {
            width: 100px;
        }

        .actions {
            text-align: center;
        }

            .actions a {
                margin-left: 15px;
            }
    </style>
</head>
<body>
    <div class="delete-container">
        <h3>Are you sure you want to delete this?</h3>
        <h4>Employee Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Address)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>
        </dl>

        <form asp-action="Delete" method="post" class="actions">
            <input type="hidden" asp-for="EmployeeId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</body>
</html>

