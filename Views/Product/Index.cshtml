@model IEnumerable<supply.Models.Product>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Product Inventory</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .header-box {
            border: 1px solid #dee2e6;
            background-color: #ffffff;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 30px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
        }

        .table-section {
            background-color: #ffffff;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
        }

        .table thead {
            background-color: #e9ecef;
        }

        .btn + .btn {
            margin-left: 0.4rem;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <!-- Header -->
        <div class="header-box d-flex justify-content-between align-items-center">
            <h2 class="mb-0 fw-bold">Product Inventory</h2>
            <a asp-action="Create" class="btn btn-success">+ Add New Product</a>
        </div>

        <!-- Table -->
        <div class="table-section">
            <table class="table table-bordered table-striped text-center">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                        <th>@Html.DisplayNameFor(model => model.First().QtyStock)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Price)</th>
                        <th>@Html.DisplayNameFor(model => model.First().CategoryId)</th>
                        <th>@Html.DisplayNameFor(model => model.First().SupplierId)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.QtyStock)</td>
                            <td>@Html.DisplayFor(modelItem => item.Price)</td>
                            <td>@(item.Category?.Name ?? "N/A")</td>
                            <td>@(item.Supplier?.Name ?? "N/A")</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-sm btn-info text-white">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
        <a class="nav-link text-break link-info text-decoration-underline mt-2" asp-area="" asp-controller="DashBoard" asp-action="Index">Return to dashboard</a>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
