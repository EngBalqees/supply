@model supply.Models.Product

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            border: 1px solid #dee2e6;
            box-shadow: 0 3px 6px rgba(0,0,0,0.05);
        }

        .card-header {
            background-color: #fff3cd;
            border-bottom: 1px solid #ffeeba;
        }

        dt {
            font-weight: 500;
        }
    </style>
</head>
<body>
    <div class="container mt-5" style="max-width: 700px;">
        <div class="card">
            <div class="card-header text-danger">
                <h4 class="mb-0">Are you sure you want to delete this product?</h4>
            </div>
            <div class="card-body">
                <h5 class="mb-3 text-muted">Product Details</h5>
                <dl class="row border rounded p-3 bg-light">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.QtyStock)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.QtyStock)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Price)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>

                    <dt class="col-sm-4">Category</dt>
                    <dd class="col-sm-8">@(Model.Category?.Name ?? "N/A")</dd>

                    <dt class="col-sm-4">Supplier</dt>
                    <dd class="col-sm-8">@(Model.Supplier?.Name ?? "N/A")</dd>
                </dl>

                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="ProductId" />
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-danger me-2">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
