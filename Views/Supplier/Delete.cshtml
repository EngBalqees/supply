@model supply.Models.Supplier

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Delete Supplier</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="background-color: #f8f9fa;">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg rounded-4 border-danger">
                    <div class="card-header bg-danger text-white">
                        <h4 class="mb-0">Are you sure you want to delete this supplier?</h4>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-4">
                            <dt class="col-sm-3">Name</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                            <dt class="col-sm-3">Contact Person</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.ContactPerson)</dd>

                            <dt class="col-sm-3">Address</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>

                            <dt class="col-sm-3">Phone</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.phone)</dd>

                            <dt class="col-sm-3">Email</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.email)</dd>
                        </dl>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="SupplierId" />
                            <div class="d-flex justify-content-between">
                                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
