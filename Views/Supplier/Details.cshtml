@model supply.Models.Supplier

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Supplier Details</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="background-color: #f8f9fa;">

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Supplier Details</h4>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-4">
                            <dt class="col-sm-3">Name</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                            <dt class="col-sm-3">Contact Person</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.ContactPerson)</dd>

                            <dt class="col-sm-3">Address</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>

                            <dt class="col-sm-3">Phone</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.phone)</dd>

                            <dt class="col-sm-3">Email</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.email)</dd>
                        </dl>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                            <a asp-action="Edit" asp-route-id="@Model?.SupplierId" class="btn btn-primary">Edit</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
