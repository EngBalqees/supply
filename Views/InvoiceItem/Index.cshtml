@model IEnumerable<supply.Models.InvoiceItem>

@{
    ViewBag.Title = "Invoice Items";
    Layout = null;
}

<!-- Bootstrap 5 CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Invoice Items List</h2>
        <a asp-action="Create" class="btn btn-primary">+ Add New Item</a>
    </div>

    <table class="table table-bordered table-striped text-center">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().InvoiceNumber)</th>
                <th>@Html.DisplayNameFor(model => model.First().Qty)</th>
                <th>@Html.DisplayNameFor(model => model.First().Vprice)</th>
                <th>@Html.DisplayNameFor(model => model.First().Tprice)</th>
                <th>@Html.DisplayNameFor(model => model.First().Product.Name)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.InvoiceNumber</td>
                    <td>@item.Qty</td>
                    <td>@item.Vprice</td>
                    <td>@item.Tprice</td>
                    <td>@(item.Product?.Name ?? "N/A")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.InvoiceItemId" class="btn btn-sm btn-warning me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.InvoiceItemId" class="btn btn-sm btn-info me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.InvoiceItemId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
        <a class="nav-link text-break link-info text-decoration-underline mt-2" asp-area="" asp-controller="DashBoard" asp-action="Index">Return to dashboard</a>

</div>
