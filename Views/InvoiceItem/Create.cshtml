                <input asp-for="Vprice" class="form-control" />
                <span asp-validation-for="Vprice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tprice" class="control-label"></label>
                <input asp-for="Tprice" class="form-control" />
                <span asp-validation-for="Tprice" class="text-danger"></span>
            </div>
