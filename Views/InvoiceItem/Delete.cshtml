@model supply.Models.InvoiceItem

@{
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h3 class="text-danger mb-4">Are you sure you want to delete this invoice item?</h3>

    <dl class="row">
        <dt class="col-sm-3">Invoice Number</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.InvoiceNumber)</dd>

        <dt class="col-sm-3">Quantity</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Qty)</dd>

        <dt class="col-sm-3">Unit Price</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Vprice)</dd>

        <dt class="col-sm-3">Total Price</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Tprice)</dd>

        <dt class="col-sm-3">Product Name</dt>
        <dd class="col-sm-9">@Model.Product?.Name</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="InvoiceItemId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
    </form>
</div>
