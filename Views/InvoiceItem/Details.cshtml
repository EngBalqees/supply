@model supply.Models.InvoiceItem

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Invoice Item Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        <h4 class="mb-3">Invoice Item Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Invoice Number</dt>
            <dd class="col-sm-9">@Model.InvoiceNumber</dd>

            <dt class="col-sm-3">Quantity</dt>
            <dd class="col-sm-9">@Model.Qty</dd>

            <dt class="col-sm-3">Unit Price</dt>
            <dd class="col-sm-9">@Model.Vprice.ToString("C")</dd>

            <dt class="col-sm-3">Total Price</dt>
            <dd class="col-sm-9">@Model.Tprice.ToString("C")</dd>

            <dt class="col-sm-3">Product Name</dt>
            <dd class="col-sm-9">@Model.Product?.Name</dd>
        </dl>

        <a asp-action="Edit" asp-route-id="@Model.InvoiceItemId" class="btn btn-primary me-2">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</body>
</html>
