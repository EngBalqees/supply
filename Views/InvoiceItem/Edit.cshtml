@model supply.ViewModels.VmInvoiceProduct

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Invoice Item</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h4>Edit Invoice Item</h4>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="InvoiceItemId" />

                    <div class=" mb-3">
                        <label asp-for="InvoiceNumber" class="form-label"></label>
                        <input asp-for="InvoiceNumber" class="form-control" />
                        <span asp-validation-for="InvoiceNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Qty" class="form-label"></label>
                        <input asp-for="Qty" class="form-control" type="number" />
                        <span asp-validation-for="Qty" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Vprice" class="form-label"></label>
                        <input asp-for="Vprice" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Vprice" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Tprice" class="form-label"></label>
                        <input asp-for="Tprice" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Tprice" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ProductId" class="form-label">Product</label>
                        <select asp-for="ProductId" class="form-select" asp-items="@(new SelectList(Model.ListProduct, "ProductId", "Name"))">
                            <option value="">-- Select Product --</option>
                        </select>
                        <span asp-validation-for="ProductId" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
                </form>
            </div>
        </div>
    </div>

    @* Optional scripts if not included in layout *@
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
